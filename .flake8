 [flake8]
 max-line-length = 120
 exclude =
     .git,
     __pycache__,
     build,
     dist,
     .venv,
     *.egg-info
 ignore =
     # Line too long - handled by black
     E501,
     # Line break before binary operator - black preference
     W503,
     # Whitespace before ':' - conflicts with black
     E203
 per-file-ignores =
     # Allow unused imports in __init__.py
     __init__.py:F401
