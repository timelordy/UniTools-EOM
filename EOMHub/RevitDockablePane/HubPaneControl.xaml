<UserControl x:Class="EOMHub.DockablePane.HubPaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="300"
             MinWidth="320"
             MinHeight="480"
             Background="White">
    <Grid Background="White">
        <wv2:WebView2 x:Name="HubWebView"
                      Margin="0"
                      DefaultBackgroundColor="White"
                      Visibility="Collapsed" />

        <Border x:Name="PlaceholderPanel"
                Margin="0"
                Padding="24"
                Background="White"
                BorderBrush="{x:Null}"
                BorderThickness="0"
                Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="520">
                <TextBlock
                    Text="UniTools Hub"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#111827"
                    Margin="0,0,0,10" />

                <TextBlock
                    x:Name="PlaceholderText"
                    Text="Нажмите кнопку «Хаб» в pyRevit, чтобы запустить сервер."
                    TextWrapping="Wrap"
                    FontSize="13"
                    Foreground="#4B5563"
                    Margin="0,0,0,14" />

                <Button
                    x:Name="PlaceholderRefreshButton"
                    Content="Проверить подключение"
                    Padding="12,8"
                    HorizontalAlignment="Left"
                    Click="OnPlaceholderRefreshClick" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
