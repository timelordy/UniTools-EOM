<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Навигатор розеток AC" Height="450" Width="350" ShowInTaskbar="False" Topmost="True" ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Выберите розетку для просмотра:" FontWeight="Bold" Margin="0,0,0,5"/>
        
        <ListBox Name="socket_list" Grid.Row="1" SelectionMode="Single" SelectionChanged="selection_changed" Margin="0,0,0,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Desc}" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
             <Button Name="btnShow3D" Content="Показать (3D)" Width="90" Height="25" Margin="5"/>
             <Button Name="btnShowPlan" Content="Показать (План)" Width="100" Height="25" Margin="5"/>
             <Button Name="btnClose" Content="Закрыть" Width="60" Height="25" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
